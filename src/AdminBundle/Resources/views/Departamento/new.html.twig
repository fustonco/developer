{% extends '::base.html.twig' %}

{% block body %}
    <div class="block-header">
        <h2>Novo Departamento</h2>
        <small>Criar um novo departamento</small>
    </div>

    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="header">
                    <h2>DEPARTAMENTO</h2>
                </div>
                <div class="body">
                    <form id="form_validation" method="POST" novalidate="novalidate">
                        <div class="form-group form-float">
                            <div class="form-line">
                                <input type="text" class="form-control" name="nome" required aria-required="true">
                                <label class="form-label">Nome</label>
                            </div>
                        </div>
                        <div class="form-group form-float">
                            <div class="form-line">
                                <input type="text" class="form-control" name="descricao" required aria-required="true">
                                <label class="form-label">Descrição</label>
                            </div>
                        </div>
                        <div style="text-align: right;">
                            <button class="btn btn-primary waves-effect" type="submit">CRIAR</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
<script>
let ajaxForm;
$('#form_validation').submit(function(e) {
    e.preventDefault();
    if(!ajaxForm) {
        ajaxForm = $.ajax({
            type: "POST",
            url: '/admin/cadastrar/departamento/',
            data: $('#form_validation').serialize(),
            dataType: 'json',
            success: function(data) {
                ajaxForm = null;
                console.log('success', data);
                swal('Sucesso', 'Departamento Cadastrado com Sucesso!', 'success');
            },
            error: function(data) {
                ajaxForm = null;
                console.error('erro', data);
                if(data.status == 404){
                    swal('Erro', 'Entre em contato com o suporte.', 'error');
                } else {
                    swal('Erro', data.responseJSON.description, 'info');
                }
            },
            beforeSend: function() {
                swal({
                    title: "Carregando...",
                    text: "Espere por favor.",
                    imageUrl: "{{ asset('images/ajaxloader.gif') }}",
                    showConfirmButton: false,
                    allowOutsideClick: false
                });
            }
        });
    }
});
</script>
{% endblock %}