{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Pedido list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Codigo</th>
                <th>Datavencimento</th>
                <th>Datapedido</th>
                <th>Valor</th>
                <th>Descricao</th> 
                <th>Ativo</th>
                <th>Status</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('func_pedido_show', { 'id': entity.id }) }}">{{ entity.codigo }}</a></td>
                <td>{% if entity.dataVencimento %}{{ entity.dataVencimento|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.dataPedido %}{{ entity.dataPedido|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.valor }}</td>
                <td>{{ entity.descricao }}</td>
                <td>{{ entity.ativo }}</td>
                <td>{{ entity.status }}</td>
                <td>{{ entity.id }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('func_pedido_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('func_pedido_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('func_pedido_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
