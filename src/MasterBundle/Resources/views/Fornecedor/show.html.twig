    <h1>Fornecedor</h1>

    <table class="record_properties">
        <tbody>
            <tr> 
                <th>Nome</th>
                <td>{{ entity.nome }}</td>
            </tr>
            <tr>
                <th>Cnpj</th>
                <td>{{ entity.cnpj }}</td>
            </tr>
            <tr>
                <th>Cpf</th>
                <td>{{ entity.cpf }}</td>
